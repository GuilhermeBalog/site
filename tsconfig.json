{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],
    "jsx": "react",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist/"]
}